<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="author" content="David See" />
    <meta name="description" content="This is a internal application for a company to post open jobs" />
    <meta name="keywords" content="job, board, internal" />
    <!-- Document title -->
    <title>@ViewBag.Title</title>
    <!-- Stylesheets & Fonts -->
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">

    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <!--  HTML5 Shiv-->
    <!--[if lt IE 9]<script src="assets/js/html5shiv.js"></script><![endlf]-->
    <!--FAVICON-->
    <!-- Plugins Stylesheets -->
    <link rel="stylesheet" href="~/Content/css/loader/loaders.css">
    <link rel="stylesheet" href="~/Content/css/font-awesome/font-awesome.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/css/aos/aos.css">
    <link rel="stylesheet" href="~/Content/css/swiper/swiper.css">
    <link rel="stylesheet" href="~/Content/css/lightgallery.min.css">
    <!-- Template Stylesheet -->
    <link rel="stylesheet" href="~/Content/css/style.css">
    <!-- Responsive Stylesheet -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">
    <!--Custom Stylesheet -->
    <link rel="stylesheet" href="~/Content/css/Custom.css" />
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" type="image/x-icon" />
</head>

<body>
    <!-- Loader Start -->
    <div class="css-loader">
        <div class="loader-inner line-scale d-flex align-items-center justify-content-center"></div>
    </div>
    <!-- Loader End -->
    <!-- Header Start -->
    <header class="position-relative">
        <div>            
            <nav class="navbar navbar-expand-md navbar-light" id="topNav">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Content/images/StarMed_logo.png" alt="StarMed"></a>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav nav-links">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                        @if (Request.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="navbar-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Additional Functions<span class="caret"></span></a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                    {
                                        <a class="dropdown-item" href="@Url.Action("Index", "Applications")">Applications</a><br />
                                        <a class="dropdown-item" href="@Url.Action("Index", "ApplicationStatus")">App Status</a><br />
                                    }
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="dropdown-item" href="@Url.Action("Index", "RolesAdmin")">Roles</a><br />
                                        <a class="dropdown-item" href="@Url.Action("Index", "UsersAdmin")">Users</a><br />
                                        <a class="dropdown-item" href="@Url.Action("Index", "UserDetails")">User Details</a><br />
                                        <a class="dropdown-item" href="@Url.Action("Index", "Positions")">Positions</a><br />
                                    }
                                    <a class="dropdown-item" href="@Url.Action("Index", "Locations")">Locations</a><br />
                                    <a class="dropdown-item" href="@Url.Action("Index", "OpenPositions")">Open Positions</a>
                                </div>
                            </li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </nav>
        </div>
    </header>    
    <!-- Header End -->        

        @RenderBody()
         
    <!-- Footer Start -->
    <footer class="row">
        <div class="col-md col-sm"></div>
        <div class="container-fluid col-md col-sm">
            <h1>StarMed</h1>
            <p>Copyright &copy; 2021</p>
        </div>
        <div class="col-md col-sm">
            <nav>
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                    <li><a href="@Url.Action("Documentation", "Home")">Documentation</a></li>
                </ul>
            </nav>
        </div>        
        <div class="social col-md col-sm">
            <a href="#"><i class="fa fa-twitter fa-2x"></i></a>
            <a href="#"><i class="fa fa-facebook fa-2x"></i></a>
            <a href="#"><i class="fa fa-github fa-2x"></i></a>
            <a href="#"><i class="fa fa-instagram fa-2x"></i></a>
        </div>
       <div class="col-md col-sm"></div>
    </footer>
    <!-- Footer End -->

    <!--jQuery-->
    <script src="~/Content/js/jquery-3.3.1.js"></script>
    <!--Plugins-->
    <script src="~/Content/js/bootstrap.bundle.js"></script>
    <script src="~/Content/js/loaders.css.js"></script>
    <script src="~/Content/js/aos.js"></script>
    <script src="~/Content/js/swiper.min.js"></script>
    <script src="~/Content/js/lightgallery-all.min.js"></script>
    <!--Template Script-->
    <script src="~/Content/js/main.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>