@model StarMed.UI.MVC.Models.RoleViewModel

@{
    ViewBag.Title = "StarMed | Edit Role";
    ViewBag.Message = "Edit Role";
}
<br />
<h2 style="text-align:center;">@ViewBag.Message</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="row form-horizontal" style="text-align:center;">        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="col-md-4 form-group" style="text-align:center;" >
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div >
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="col form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
